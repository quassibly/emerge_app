  <h1 style="text-align: center; margin: 60px auto 40px auto;">Opinion</h1>
  <div class="opinion-header-photo round" style="background-image: url('<%= @opinion.contributor.photo %>')">
  </div>
  <div class="opinion-head-card">
    <div class="opinion-contributor upcase"><%= @opinion.contributor.name %></div>
    <div class="profile-headline upcase"><h1><%= @opinion.headline %></h1></div>
    <div class="opinion-subhead"><%= @opinion.subhead %></div>
    <div class="profile-tag tag"><%= @opinion.tag %></div>
  </div>


<div class="profile-container">
  <div class="profile-social">
    <%= link_to "http://twitter.com/share?text=#{@opinion.headline}&url=#{request.original_url}" do %>
      <i class="social fab fa-twitter"></i>
    <% end %>
    <%= link_to "http://www.facebook.com/sharer.php?u=#{request.original_url}/&t=#{@opinion.headline}" do %>
      <i class="social fab fa-facebook-f"></i>
    <% end %>
    <%= link_to "https://www.linkedin.com/shareArticle?mini=true&url=#{request.original_url}&title=#{@opinion.headline}" do %>
      <i class="social fab fa-linkedin-in"></i>
    <% end %>
  </div>

  <div class="profile-body"><%= sanitize @opinion.body,
    tags: %w(strong em b i p code pre tt samp kbd var sub
    sup dfn cite big small address hr div span h1 h2 h3 h4 h5 h6 ul ol li dl dt dd abbr
    acronym a img blockquote del ins video source),
    attributes: %w(href src width height alt cite datetime title class name xml:lang abbr type autoplay loop) %></div>
  <%= render 'shared/contributor' %>
  </div>
</div>

<script>
  var imgs = document.querySelectorAll('.profile-body img');
  var divs = document.querySelectorAll('.profile-body div');
  var videos = document.querySelectorAll('.profile-body video');
  console.log(imgs);
  console.log(divs);

  [].forEach.call(divs, function(div) {
    div.classList.add("body");
  });

  [].forEach.call(imgs, function(img) {
    img.closest("div").classList.remove("body");
    img.closest("div").classList.add("wide");
  });

  [].forEach.call(videos, function(video) {
    video.closest("div").classList.remove("body");
    video.closest("div").classList.add("video");
  });
</script>

