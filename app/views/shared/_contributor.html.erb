<% if @article.present? %>
  <div class="contributor-container">
    <%= image_tag @article.contributor.photo, class: "contributor-image" %>
    <div class="contributor-text-container">
      <div class="contributor-text-header">Words by <span class="contributor-name upcase"><%= @article.contributor.name %></span>

          <% if @article
       .contributor.twitter.present? %>
            <%= link_to "https://twitter.com/#{@article
       .contributor.twitter}", target: "_blank", rel: "nofollow" do %>
              <i class="social fab fa-twitter"></i>
            <% end %>
          <% end %>
          <% if @article
       .contributor.instagram.present? %>
            <%= link_to "https://www.instagram.com/#{@article
       .contributor.instagram}/", target: "_blank", rel: "nofollow" do %>
              <i class="social fab fa-instagram"></i>
            <% end %>
          <% end %>
        </div>
      <%= @article.contributor.bio %>
      </div>

    </div>
  </div>
  <% if @article.photographer.present? %>
    <div class="contributor-container">
      <div class="contributor-text-container-left">
        <div class="contributor-text-header">Photos by <span class="contributor-name upcase"><%= @article
   .photographer.name %></span>
          <% if @article
       .photographer.twitter.present? %>
            <%= link_to "https://twitter.com/#{@article
       .photographer.twitter}", target: "_blank", rel: "nofollow" do %>
              <i class="social fab fa-twitter"></i>
            <% end %>
          <% end %>
          <% if @article
       .photographer.instagram.present? %>
            <%= link_to "https://www.instagram.com/#{@article
       .photographer.instagram}/", target: "_blank", rel: "nofollow" do %>
              <i class="social fab fa-instagram"></i>
            <% end %>
          <% end %>
      </div>
        <%= @article
   .photographer.bio %>
    </div>
    <%= image_tag @article.photographer.photo, class: "contributor-image" %>
  </div>
  <% end %>
<% end %>

