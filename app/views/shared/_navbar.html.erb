<% if current_home? %>
  <div class="navbar-home">
    <a href="/" class="navbar-left">
      <%= image_tag "Emerge_Logo.png", id: "logo-home" %>
    </a>
    <div class="navbar-home-quote">
      Emerge is an independent, non-profit media platform sowing the seeds of a new civilisation.
    </div>
  </div>
<% end %>

<div class="navbar">

  <!-- Left Navigation -->
  <div class="logo-hide">
    <a href="/" class="navbar-left">
        <%= image_tag "Emerge_Logo.png", id: "logo", class: "logo-hide" %>
    </a>
  </div>

  <!-- Center Navigation -->
  <div class="navbar-center hidden-xs hidden-sm">
    <%= link_to "journal", send("#{navbar_tab("journal")}_path"), class: current_category?("journal") if user_signed_in? %>
    <div class="navbar-item-menu">
      <%= link_to send("#{navbar_tab("insights")}_path"), class: current_category?("insights") do %>
        insights
      <% end %>
      <div class="navbar-item-dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to "videos", send("#{navbar_tab("videos")}_path"), class: current_category?("videos") %>
        <%= link_to "podcasts", send("#{navbar_tab("podcasts")}_path"), class: current_category?("podcasts") %>
      </div>
    </div>
    <div class="navbar-item-menu">
      <%= link_to send("#{navbar_tab("events")}_path"), class: current_category?("events") do %>
        events
      <% end %>
      <div class="navbar-item-dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to "spaces", send("#{navbar_tab("spaces")}_path"), class: current_category?("spaces") %>
      </div>
    </div>
    <%= link_to "about", send("#{navbar_tab("about")}_path"), class: current_category?("about") %>
    <%#= link_to "community", "https://network-3229053.mn.co/feed", target: "_blank", rel: "nofollow", class: current_category?("community") %>
  </div>

  <!-- right Navigation -->
  <div class="navbar-right">
    <div class="hidden-xs hidden-sm">
      <%= link_to "https://twitter.com/whatisemerging", target: "_blank", rel: "nofollow" do %>
        <i class="social fab fa-twitter"></i>
      <% end %>
      <%= link_to "https://www.facebook.com/whatisemerging", target: "_blank", rel: "nofollow" do %>
        <i class="social fab fa-facebook-f"></i>
      <% end %>
      <%= link_to "https://www.instagram.com/whatisemerging/", target: "_blank", rel: "nofollow" do %>
        <i class="social fab fa-instagram"></i>
      <% end %>
      <%= link_to "https://linkedin.com/company/whatisemerging", target: "_blank", rel: "nofollow" do %>
        <i class="social fab fa-linkedin-in"></i>
      <% end %>
      <%= link_to "https://www.youtube.com/channel/UCtEINk-Y-JjcwH4dl6z2EKg", target: "_blank", rel: "nofollow" do %>
        <i class="social fab fa-youtube"></i>
      <% end %>
    </div>

    <div class="navbar-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right dropdown-menu-columns navbar-dropdown-menu">
          <% @tabs = ["home", "journal", "people", "insights"] %>
          <% @tabs.each do |tab| %>
            <li><%= link_to tab.capitalize, send("#{navbar_tab(tab)}_path"), class: 'navbar-item navbar-link' %></li>
          <% end %>
<!--          <li><%#= link_to "community", "https://network-3229053.mn.co/feed", target: "_blank", rel: "nofollow", class: 'navbar-item navbar-link' %></li>-->
          <% @tabs = ["videos", "podcasts", "events", "spaces", "about"] %>
          <% @tabs.each do |tab| %>
            <li><%= link_to tab.capitalize, send("#{navbar_tab(tab)}_path"), class: 'navbar-item navbar-link' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

