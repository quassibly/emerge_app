<div class="profile-header-photo" style="background-image: url('<%= @profile.photo %>')">
  <div class="profile-head-card">
    <div class="profile-headline upcase"><h2><%= @profile.headline %></h2></div>
    <div class="profile-subhead"><%= @profile.subhead %></div>
    <div class="profile-tag tag"><%= @profile.tag %></div>
  </div>
</div>

<div class="profile-container">
  <div class="profile-social">
    <%= link_to "http://twitter.com/share?text=#{@profile.headline}&url=#{request.original_url}" do %>
      <i class="social fab fa-twitter"></i>
    <% end %>
    <%= link_to "http://www.facebook.com/sharer.php?u=#{request.original_url}/&t=#{@profile.headline}" do %>
      <i class="social fab fa-facebook-f"></i>
    <% end %>
    <%= link_to "https://www.linkedin.com/shareArticle?mini=true&url=#{request.original_url}&title=#{@profile.headline}" do %>
      <i class="social fab fa-linkedin-in"></i>
    <% end %>
  </div>

  <div class="profile-body"><%= sanitize @profile.body,
    tags: %w(strong em b i p code pre tt samp kbd var sub
    sup dfn cite big small address hr br div span h1 h2 h3 h4 h5 h6 ul ol li dl dt dd abbr
    acronym a img blockquote del ins video source),
    attributes: %w(href src width height alt cite datetime title class name xml:lang abbr type autoplay loop)
    %>
  </div>

  <%= render 'shared/contributor' %>
</div>

<script>
  var imgs = document.querySelectorAll('.profile-body img');
  console.log(imgs);

  [].forEach.call(imgs, function(img) {
  img.closest("div").classList.add("wide");
});
</script>


